<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/round_corner_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="小结 / Data"
        android:textColor="@color/color_cccccc"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/x13"
        android:textSize="@dimen/x11"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <ImageView
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:background="@mipmap/time_total"
        android:layout_marginTop="@dimen/x21"/>

    <TextView
        android:id="@+id/duraion_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x3"
        android:textColor="@color/color_white"
        android:textSize="@dimen/x11"
        android:text="TIME"/>

    <TextView
        android:id="@+id/duraion_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:45:23"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/x53"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"
        android:layout_marginTop="@dimen/x35"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/x27"
                android:layout_height="@dimen/x27"
                android:background="@mipmap/kcal_total"/>
            <TextView
                android:id="@+id/kcal_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="545"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x27"/>
            <TextView
                android:id="@+id/kcal_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x27"
                android:layout_marginStart="5dp"
                android:gravity="bottom"
                android:text="KCAL"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x11"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/x27"
                android:layout_height="@dimen/x27"
                android:background="@mipmap/km_total"/>
            <TextView
                android:id="@+id/km_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="12.6"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x27"/>
            <TextView
                android:id="@+id/km_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x27"
                android:layout_marginStart="5dp"
                android:gravity="bottom"
                android:text="KM"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x11"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>