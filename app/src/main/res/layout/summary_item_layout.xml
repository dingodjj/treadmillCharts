<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x233"
    android:layout_height="@dimen/x197"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/round_corner_bg">

    <TextView
        android:id="@+id/data_item_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="小结/Data"
        android:textColor="@color/color_cccccc"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/x13"
        android:textSize="@dimen/x11"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <com.nl.treadmilllauncher.view.DataItemChartView
        android:id="@+id/dataItemChartView"
        android:layout_width="@dimen/x73"
        android:layout_height="@dimen/x73"
        android:layout_marginTop="@dimen/x9"/>

    <TextView
        android:id="@+id/data_item_avg_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="@dimen/x11"
        android:text="平均.HR（bmp)"
        android:layout_marginTop="@dimen/x7"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"
        android:layout_marginTop="@dimen/x9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/data_item_max_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="545"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x13"/>
            <TextView
                android:id="@+id/data_item_max_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="最高HR"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x8"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/data_item_min_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.6"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x13"/>
            <TextView
                android:id="@+id/data_item_min_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="最低HR"
                android:textColor="@color/color_white"
                android:textSize="@dimen/x8"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>